<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_layout_fav"
        android:layout_width="match_parent"
        android:layout_height="101dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:src="@drawable/ticket1"
                android:layout_width="100dp"
                android:layout_height="59dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp" />

            <TextView
                android:id="@+id/label_film"
                android:layout_width="261dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="123dp"
                android:layout_weight="1"
                android:text="Harold and Kumar"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/label_jam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/label_film"
                android:layout_below="@+id/label_tanggal"
                android:text="14:25"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/label_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/label_film"
                android:layout_below="@+id/label_seat"
                android:text="10 Desember 2018"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/label_seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/label_film"
                android:layout_centerVertical="true"
                android:text="Seat A1, A2, A3, A4, A5"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/label_bioskop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/label_film"
                android:layout_below="@+id/label_film"
                android:text="Mall 21"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/label_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imageView"
                android:layout_below="@+id/imageView"
                android:text="Lunas"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</android.support.v7.widget.CardView>